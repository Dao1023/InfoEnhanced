{
    "manifest_version": 3,
    "name": "InfoEnhanced",
    "author": "Dao, GJ",
    "version": "1.1",
    "description": "致力于净化网页",
    "icons": {
        "128": "/static/images/icon1.png",
        "48": "/static/images/icon2.png"
    },
    "action": {
        "default_icon": "/static/images/icon1.png",
        "default_popup": "/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.baidu.com/s*", "https://www.zhihu.com/*", "https://www.bilibili.com/*"],
            "js": ["/static/js/jquery-3.6.3.min.js", "/static/js/Bilibili Evolved.user.js", "/static/js/content.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "/static/js/background.js"
    },
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "activeTab",
        "tabs",
        "https://www.baidu.com/s*",
        "https://www.zhihu.com/*",
        "https://www.bilibili.com/*"
    ]
}